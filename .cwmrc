borderwidth 4
snapdist    20
gap         40 4 4 4               # Gap when maximizing. Top bottom left right.
sticky      yes                   # New windows will be in current group.
moveamount  10                    # Pixels to move when using keyboard.

color activeborder   "#a5633a"
color inactiveborder lightgrey 
color font           white        # Menu colours.
color selfont        white
color menubg         black
color menufg         blue         # Border and selected items.

fontname "monospace:pixelsize=20" # Menu font.

ignore polybar
autogroup 9 polybar

autogroup 1 Firefox
autogroup 1 surf
autogroup 9 discord
autogroup 9 slack

command firefox      firefox
command pavucontrol  pavucontrol
command discord	discord
command slack slack
command lxterminal lxterminal
command rofi rofirun

bind XF86MonBrightnessDown cwm-brightness down
bind XF86MonBrightnessUp   cwm-brightness up

bind 4S-r    restart         # CWM controls
bind 4S-q    quit

bind 4S-d     menusearch        # Launch "command" entries defined above.
# bind 4-d      exec       # Launch anything in PATH.
bind 4-d      rofirun
bind 4S-slash search    # Window search.
bind 4-slash  menu_unhide
bind 4-b      label # Assign label to window for searching.

bind 4-Tab    cyclegroup
bind 4S-Tab   rcyclegroup
bind 4-h      hide

bind 4-m      maximize # Change window size.
bind 4S-J     vmaximize
bind 4S-K     vmaximize
bind 4S-Up    vmaximize
bind 4S-Down  vmaximize
bind 4S-H     hmaximize
bind 4S-L     hmaximize
bind 4S-Left  hmaximize
bind 4S-Right hmaximize

bind 4-h      cwm-mv left   # Move window to side of the screen.
bind 4-j      cwm-mv bottom
bind 4-k      cwm-mv top
bind 4-l      cwm-mv right
bind 4-Left   cwm-mv left
bind 4-Down   cwm-mv bottom
bind 4-Up     cwm-mv top
bind 4-Right  cwm-mv right

bind 4-1     grouponly1    # Display *only* these groups, hiding
bind 4-2     grouponly2    # everything else.
bind 4-3     grouponly3
bind 4-4     grouponly4
bind 4-5     grouponly5  # Toggle visibility; useful for e.g. chat
bind 4-6     grouponly6  # and other "temporary" windows.
bind 4-7     grouponly7
bind 4-8     grouponly8
bind 4-9     grouponly9
bind 4-0     grouponly10

bind 4S-1      movetogroup1 # Assign windows to a group.
bind 4S-2      movetogroup2
bind 4S-3      movetogroup3
bind 4S-4      movetogroup4
bind 4S-5      movetogroup5
bind 4S-6      movetogroup6
bind 4S-7      movetogroup7
bind 4S-8      movetogroup8
bind 4S-9      movetogroup9
bind 4S-0      movetogroup10

bind 4-s      sticky    # Stick window to all groups.

# Mouse bindings
#---------------
mousebind 4-1    window_move     # Holding Win+left mouse moves window.
mousebind 4-3    window_resize   # Right mouse resizes.

# vim:ft=config
