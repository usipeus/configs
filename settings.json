{
    "autoclose": true,
    "autoindent": true,
    "autosave": false,
    "colorcolumn": 0,
    "colorscheme": "default",
    "cursorline": true,
    "eofnewline": true,
    "ignorecase": false,
    "indentchar": " ",
    "infobar": true,
    "keepautoindent": false,
    "linter": true,
    "pluginchannels": [
        "https://raw.githubusercontent.com/micro-editor/plugin-channel/master/channel.json"
    ],
    "pluginrepos": [],
    "rmtrailingws": true,
    "ruler": true,
    "savecursor": false,
    "saveundo": false,
    "scrollmargin": 3,
    "scrollspeed": 2,
    "softwrap": false,
    "splitBottom": true,
    "splitRight": true,
    "statusline": true,
    "syntax": true,

    "*.rb": {
        "tabsize": 2
    },
    "*.c": {
        "tabsize": 8,
        "tabstospaces": false
    },
    "*.cpp": {
        "tabsize": 8,
        "tabstospaces": false
    },
    "*.h": {
        "tabsize": 8,
        "tabstospaces": false
    },
    "*.hpp": {
        "tabsize": 8,
        "tabstospaces": false
    },
    "*.go": {
        "tabsize": 8,
        "tabstospaces": false
    },

    "tabsize": 4,
    "tabstospaces": false,
    "CtrlR": "redo"
}
